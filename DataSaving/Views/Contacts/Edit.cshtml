@{
}


@model DataSaving.Models.Entities.Contact

<h1>Edit Contact</h1>

@if (Model is null)
    {
        <p>No contact was found with this Id.</p>
    }
    
else{

<form method="post">
<div class="mt-3">
    <label class="form-label">Id</label>
    <input type ="text" class="form-control" asp-for="Id" readonly/>

    <label class="form-label">First Name</label>
    <input type="text" class="form-control" asp-for="FirstName" />

    <label class="form-label">Last Name</label>
    <input type="text" class="form-control" asp-for="LastName" />

    <label class="form-label">Email</label>
    <input type="text"  class="form-control" asp-for="Email" />

    <label class="form-label">Phone</label>
    <input type="text" class="form-control" asp-for="Phone" />


</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Contacts">Delete</button>
</div>

</form>
}